import processing.core.PApplet;

public class plane {
	int speed=20;
	PApplet parent;	
	float Xdir=0;
	float Ydir=0;
	
	plane(PApplet p)
	{
		parent = p;
		Xdir=0;
		Ydir=0;
	}
	
	void dir(int x,int y)
	{
		Xdir=Xdir+x*speed;
		Ydir=Ydir+y*speed;
	}
	void angle(int x)
	{
		
	}
	

	 void display() 
	 {
		 parent.pushMatrix();
		 parent.translate(parent.width/2, parent.height/2);
		//image(planeImage,parent.height/2,parent.width/2);
		 
		 parent.rect(Xdir,Ydir,50,10);
		 parent.popMatrix();
	 }
}
