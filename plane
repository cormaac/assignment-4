import processing.core.PApplet;

public class plane {
	PApplet parent;	
	float Xdir=0;
	float Ydir=0;
	
	plane(PApplet p)
	{
		parent = p;
		Xdir=parent.width/2;
		Ydir=parent.height/2;
	}
	
	void dir(int x,int y)
	{
		Xdir=Xdir+x;
		Ydir=Ydir+y;
	}
	void angle(int x)
	{
		
	}
	

	 void display() 
	 {
		//image(planeImage,parent.height/2,parent.width/2);
		 parent.rect(Xdir,Ydir,50,10);
	}

}
