import processing.core.PApplet;

public class plane {
	int speed=20;
	PApplet parent;	
	static float Xdir;
	static float Ydir;
	float x,y;
	
	plane(PApplet p)
	{
		parent = p;
		Ydir=parent.height/2;
	}	
		
		
	void setDir(int i, int j) 
	{
	    x = i;
	    y = j;
	}
	void dir()
	{
		Xdir =Xdir+x;
		Ydir =Ydir+y;
	}

	

	 void display() 
	 {
		//image(planeImage,parent.height/2,parent.width/2);
		 
		 parent.rect(Xdir,Ydir,50,10);
	 }
}
